<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/logo_apotek" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELLER"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_profile_menu"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:hint="Nama"
            android:inputType="text"
            android:layout_marginTop="80dp"
            android:drawablePadding="16dp" />
        <EditText
            android:id="@+id/etNoKTP"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_profile_menu"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:hint="Nomor KTP"
            android:inputType="number"
            android:drawablePadding="16dp"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_profile_menu"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawablePadding="16dp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etNoHp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_profile_menu"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:hint="Nomor HP"
            android:inputType="number"
            android:layout_marginTop="16dp"
            android:drawablePadding="16dp" />

        <EditText
            android:id="@+id/etNamaApotek"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_profile_menu"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:hint="Nama Apotek"
            android:layout_marginTop="16dp"
            android:drawablePadding="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_profile_menu"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <Spinner
                android:id="@+id/sp_jenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIA"
                android:textSize="16dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_profile_menu"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/border">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_camera_alt_24"
                        android:id="@+id/sia_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIPA"
                android:textSize="16dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_profile_menu"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/border">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_camera_alt_24"
                        android:id="@+id/sipa_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOTO GEDUNG"
                android:textSize="16dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_profile_menu"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/border">

                    <ImageView
                        android:layout_centerInParent="true" android:src="@drawable/ic_baseline_camera_alt_24"
                        android:id="@+id/gedung_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="15dp">
            <Button
                android:id="@+id/btnReg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Register"
                android:background="@drawable/shape_btn_login"
                android:textColor="@android:color/white"/>
            <ProgressBar
                android:id="@+id/loadingProg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_gravity="center"/>
        </FrameLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>