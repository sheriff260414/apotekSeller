<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_nama_jenis_golongan_obat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/iv_edit_jenis_golongan_obat"
            android:text="Pcs"
            android:textColor="@color/customBlack"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/iv_edit_jenis_golongan_obat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/iv_delete_jenis_golongan_obat"
            android:padding="4dp"
            android:src="@drawable/edit" />

        <ImageView
            android:id="@+id/iv_delete_jenis_golongan_obat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:src="@drawable/delete" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>